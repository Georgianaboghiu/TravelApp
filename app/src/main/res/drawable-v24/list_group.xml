<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#FFFFFF"
    >

    <ImageView
        android:layout_width="112dp"
        android:layout_height="81dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/crr" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    >
        <TextView
            android:id="@+id/tvdatainceput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="01/02/2021 - "
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/tvdatafinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="01/02/2021 "
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="-40dp"
        />

</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvRoute1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bucharest  "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvRoute2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Viena - "
                android:textColor="#000000"
                android:layout_marginStart="-40dp"
                />

            <TextView
                android:id="@+id/tvRoute3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Praga - "
                android:textColor="#000000"
                android:layout_marginStart="-40dp"
                />

            <TextView
                android:id="@+id/tvRoute4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Varsovia"
                android:textColor="#000000"
                android:layout_marginStart="-40dp"
                />

        </LinearLayout>



    </LinearLayout>
</LinearLayout>