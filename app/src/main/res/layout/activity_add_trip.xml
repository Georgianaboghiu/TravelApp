<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddTrip"
    android:background="#FFFFFF"
    >


    <TextView
        android:id="@+id/text_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/carter_one"
        android:text="Add trip"
        android:textAlignment="center"
        android:textColor="@color/caram"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <LinearLayout

        android:id="@+id/lndate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center|start"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/text_trip"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/tvdatainceput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_weight="1"
            android:text="Start date "
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvdatafinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-50dp"
            android:layout_weight="1"
            android:text="End date "
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


    <AutoCompleteTextView
        android:id="@+id/actvTimezone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="108dp"
        android:completionThreshold="1"
        android:dropDownAnchor="@id/tv_cities"
        android:hint="Select first destination"
        android:popupBackground="@color/colorAccent"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lndate" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tv_cities"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actvTimezone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cities"
        android:paddingBottom="16dp"
        android:textSize="10sp"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/actvTimezone"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_search_24" />



    <AutoCompleteTextView
        android:layout_marginStart="10dp"
        android:id="@+id/actvTimezone2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:completionThreshold="1"
        android:dropDownAnchor="@id/tv_cities"
        android:textColorHint="#000000"
        android:hint="Select second destination"

        android:popupBackground="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actvTimezone"
        android:visibility="gone"
        />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tv_cities2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actvTimezone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cities"
        android:paddingBottom="16dp"
        android:textSize="10sp"
        />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/actvTimezone2"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_search_24" />



    <AutoCompleteTextView
        android:layout_marginStart="10dp"
        android:id="@+id/actvTimezone3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:completionThreshold="1"
        android:dropDownAnchor="@id/tv_cities"
        android:textColorHint="#000000"

        android:hint="Select third destination"
        android:popupBackground="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actvTimezone2"
        android:visibility="gone"
        />


    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tv_cities3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actvTimezone3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cities"
        android:paddingBottom="16dp"
        android:textSize="10sp"
        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/actvTimezone3"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_search_24" />


    <Button
        android:id="@+id/btnsaveTrip"
        android:layout_width="125dp"
        android:layout_height="57dp"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/circlebutton"
        android:fontFamily="@font/armata"
        android:text="Save trip"
        android:textColor="@color/caram"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="107dp"
        android:layout_height="45dp"

        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_trip"
        app:srcCompat="@drawable/calendar" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="82dp"
        android:layout_height="72dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lndate"
        app:srcCompat="@drawable/citydestination" />

    <ImageView
        android:id="@+id/multiple_dest"
        android:layout_width="101dp"
        android:layout_height="57dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/lndate"
        app:srcCompat="@drawable/add" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="16dp"
        android:text="Multiple destinations"
        app:layout_constraintBottom_toTopOf="@+id/actvTimezone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        android:textColor="#000000"
        android:textSize="10sp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>